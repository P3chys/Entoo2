# Application
APP_NAME=Entoo
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_PORT=8000

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=entoo
DB_USERNAME=entoo_user
DB_PASSWORD=entoo_password

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
SCOUT_DRIVER=elasticsearch

# Session & Cache
SESSION_DRIVER=redis
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis

# File Upload
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,docx,doc,pptx,ppt,txt,rtf

# Subjects Directory
SUBJECTS_PATH=/var/www/html/storage/app/subjects

# Allowed Categories
ALLOWED_CATEGORIES=Prednasky,Otazky,Materialy,Seminare
